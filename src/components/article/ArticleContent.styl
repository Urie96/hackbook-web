@require './github-gist'

:root.dark
  @require './tomorrow-night'

#article-content 
  margin-top: 1.3rem;

  code.hljs
    overflow-x: unset

  blockquote 
    margin: 1rem 0;
    background-color: rgba(27, 31, 35, 0.05);
    padding: 1rem 1.5rem;
    border-left: 0.5rem solid #67cc86;

  img 
    max-width: 100%;

  p, ul, ol
    line-height 2.2

  ol 
    list-style-type: decimal;

  ul 
    list-style-type: disc;

  p, li 
    text-rendering: optimizelegibility;
    font-family: 'PingFang SC', 'Lantinghei SC', 'Microsoft Yahei', 'Hiragino Sans GB', 'Microsoft Sans Serif', 'WenQuanYi Micro Hei', Helvetica, sans-serif;
    font-weight: 400;
    font-size: 1rem;

  a
    font-weight 500
    color var(--theme)
    text-decoration none

  ul, ol
    padding-left 1.2em

  h1, h2, h3, h4, h5, h6
    font-weight 500
    line-height 1.25

  h1
   font-size 1.6rem

  h2
    font-size 1.4rem

  h3
    font-size 1.2rem

  code, kbd
    font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

  code 
    padding: 0.25rem 0.5rem;
    margin: 0;
    font-size: 0.85em;
    background-color: var(--code-bg-color);
    color: var(--code-color)
    border-radius: 3px;

  pre
    box-shadow: var(--box-shadow)
    line-height: 1.4;
    padding: 1.25rem 1.5rem;
    margin: 0.85rem 0;
    background-color: var(--code-bg-color);
    border-radius: 6px;
    overflow: auto;
    font-size: 1em;
    text-align: left;
    white-space: pre;
    word-spacing: normal;
    word-break: normal;
    word-wrap: normal;
    line-height: 1.5;
    -moz-tab-size: 4;
    -o-tab-size: 4;
    tab-size: 4;
    hyphens: none;
    code
      background-color: transparent;
      color: var(--pre-code-color)

  hr
    border 0
    border-top 1px solid var(--border-color)

  table
    border-collapse collapse
    margin 1rem 0
    display: block
    overflow-x: auto

  tr
    border-top 1px solid var(--border-color)
    &:nth-child(2n)
      background-color var(--code-bg-color)

  th, td
    border 1px solid var(--border-color)
    padding .6em 1em