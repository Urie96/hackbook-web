::-webkit-scrollbar {
    width: 5px;
    height: 3px;
}

::-webkit-scrollbar-thumb {
    background-color: var(--theme)
    border-radius: 5px;
}

#app {
  font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  // text-align: center;
}

.oneline {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

$theme=#3eaf7c;

:root {
  $background=#fff;
  --heart: #ff6666;
  --price: #ff7452;
  --theme: $theme;
  --text-color: #242424;
  --text-color-sub: #7F7F7F;
  --border-color:rgba(0, 0,  0, 0.1);
  --code-bg-color: #ecf4fa
  --code-color: #476582;
  --pre-code-color: #353535;
  --mask-color: #888;
  --box-shadow: 0 1px 8px 0 rgba(0, 0,  0, 0.2);
  --background-color: $background
  --background-color-sub: darken($background,5%)
  --img-filter: brightness(1)
}

:root.dark {
  $background=#181818;
  --background-color: $background
  --background-color-sub: lighten($background,10%);
  --box-shadow: 0 1px 8px 0 rgba(255, 255, 255, 0.2);
  --box-shadow-hover: 0 2px 16px 0 rgba(0, 0, 0, 0.7);
  --text-color: rgba(255, 255, 255, 0.6);
  --text-color-sub: #8B8B8B;
  --border-color: rgba(255, 255, 255, 0.2);
  --code-color: #c5c8c6;
  --pre-code-color:#c5c8c6;
  --mask-color: #000;
  --code-bg-color: #1d1f21;
  --img-filter: brightness(0.7)
  --color-opacity: 0.7
  --theme: darken($theme, 30%)
}

img {
  filter: var(--img-filter)
}

:root {
  min-height: 100vh
  background-color: var(--background-color);
  color: var(--text-color);
}

.c-primary {
  color: var(--theme);
}

.c-warn {
  color: #e67e22;
}

.van-cell__title {
  overflow: hidden;
}

.iconfont {
  font-size: inherit;
}

.spin {
  -webkit-animation: spin 2s linear infinite;
  animation: spin 2s linear infinite;
  display: inline-block;
}

@keyframes spin {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  100% {
    -webkit-transform: rotate(1turn);
    transform: rotate(1turn);
  }
}

.hover-big {
  transition: all 0.5s;

  &:hover {
    transform: scale(1.2) !important;
  }
}

.hover-color {
  transition: all 0.5s;

  &:hover {
    color: var(--theme) !important;
  }
}

.van-nav-bar .van-icon, .van-nav-bar__text {
  color: var(--theme);
}

.middle {
  display flex
  justify-content: center
  align-items: center
}